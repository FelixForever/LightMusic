<resources>

    <!-- Base application theme. -->
    <!-- Customize your theme here. -->
    <style name="AppTheme" parent="@style/Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogoTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="AppTheme">

        <item name="colorControlNormal">@color/material_white_normal</item>
    </style>

    <style name="tab_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
