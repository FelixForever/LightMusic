<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/v_def_music"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不是每份真心，都有美好回忆"
            android:textColor="@color/material_black_normal"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="林志颖"
            android:textColor="@color/material_black_secondary"
            android:textSize="12sp"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/chk_favorite"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/sel_favorite"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/iv_settting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/v_setting"/>
</LinearLayout>